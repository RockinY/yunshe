<div class="container">
  <div class="row align-items-center">
    <div class="col-12 col-md-6 offset-xl-2 offset-md-1 order-md-2 mb-5 mb-md-0">

      <!-- Image -->
      <div class="text-center">
        <%= image_tag 'illustrations/happiness.svg', alt: '...', class: 'img-fluid' %>
      </div>

    </div>
    <div class="col-12 col-md-5 col-xl-4 order-md-1 my-5">

      <!-- Heading -->
      <h1 class="display-4 text-center mb-3">
        Sign in
      </h1>

      <!-- Subheading -->
      <p class="text-muted text-center mb-5">
        Free access to our dashboard.
      </p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label>Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@address.com" %>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col">
              <label>Password</label>
            </div>
            <div class="col-auto">
              <%= link_to "Forgot password?", new_user_password_path, class: "form-text small text-muted" %>
            </div>
          </div>
          <div class="input-group input-group-merge">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="row">
            <div class="col">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>
        <!-- Submit -->
        <%= f.submit "Sign in", class: "btn btn-lg btn-block btn-primary mb-3" %>

        <!-- Link -->
        <div class="text-center">
          <small class="text-muted text-center">
            Don't have an account yet? <%= link_to "Sign up", new_user_registration_path %>.
          </small>
        </div>

      <% end %>

    </div>
  </div> <!-- / .row -->
</div> <!-- / .container -->
