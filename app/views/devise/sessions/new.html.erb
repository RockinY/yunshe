<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root">
  <div class="kt-grid__item   kt-grid__item--fluid kt-grid  kt-grid kt-grid--hor kt-login-v2" id="kt_login_v2">
    <!--begin::Item-->
    <div class="kt-grid__item  kt-grid--hor">
      <!--begin::Heade-->
      <div class="kt-login-v2__head">
        <div class="kt-login-v2__logo">
          <a href="#">
            <%= image_tag "logo.svg", alt: "logo", style: "height:36px;" %>
          </a>
        </div>
      </div>
      <!--begin::Head-->
    </div>
    <!--end::Item-->

    <!--begin::Item-->
    <div class="kt-grid__item  kt-grid  kt-grid--ver  kt-grid__item--fluid">
      <!--begin::Body-->
      <div class="kt-login-v2__body">
        <!--begin::Wrapper-->
        <div class="kt-login-v2__wrapper">
          <div class="kt-login-v2__container">
            <div class="kt-login-v2__title">
              <h3>Sign to Account</h3>
            </div>

            <!--begin::Form-->
            <%= form_with model: resource, url: session_path(resource), class: "kt-login-v2__form kt-form" do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Username" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
            </div>

            <div class="kt-login-v2__actions">
              <%= f.submit "Sign In", class: "btn btn-brand btn-elevate btn-pill" %>
            </div>
            <% end %>

          </div>
        </div>
        <!--end::Wrapper-->

        <!--begin::Image-->
        <div class="kt-login-v2__image">
          <%= image_tag "misc/bg_icon.svg", alt: "" %>
        </div>
        <!--begin::Image-->
      </div>
      <!--begin::Body-->
    </div>
    <!--end::Item-->

    <!--begin::Item-->
    <div class="kt-grid__item">
      <div class="kt-login-v2__footer">
        <div class="kt-login-v2__info">
          <a href="/" class="kt-link">&copy; 2019 AdMetric</a>
        </div>
      </div>
    </div>
    <!--end::Item-->
  </div>
</div>
<!-- end:: Page -->