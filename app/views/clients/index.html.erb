<!-- begin:: Subheader -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
  <div class="kt-container  kt-container--fluid ">
    <div class="kt-subheader__main">
      <button class="kt-subheader__mobile-toggle" id="kt_subheader_mobile_toggle"><span></span></button>

      <h3 class="kt-subheader__title">
        Clients
      </h3>

      <span class="kt-subheader__separator kt-subheader__separator--v"></span>

      <div class="kt-subheader__toolbar" id="kt_subheader_search">
        <span class="kt-subheader__desc" id="kt_subheader_total"><%= @clients.count %> Total </span>

        <form class="kt-subheader__search" id="kt_subheader_search_form">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search..." id="generalSearch">
            <div class="input-group-append">
              <span class="input-group-text" id="basic-addon2">
                <i class="flaticon2-search-1"></i>
              </span>
            </div>
          </div>
        </form>
      </div>

    </div>

    <div class="kt-subheader__toolbar">
      <%= link_to "Add Client", new_client_path, class: "btn btn-brand btn-bold" %>
    </div>
  </div>
</div>
<!-- end:: Subheader -->

<div class="kt-container kt-container--fluid kt-grid__item kt-grid__item--fluid">
  <div class="kt-portlet">
    <div class="kt-portlet__body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "client", collection: @clients %>
        </tbody>
      </table>
    </div>
  </div>
</div>